<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpUserActivity">

    <EditText
        android:id="@+id/text_userConfirmPassword"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/corner_plaintexts"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="  Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_signupuser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.016" />

    <EditText
        android:id="@+id/text_userPassword"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/corner_plaintexts"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/text_userConfirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/text_userEmail"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/corner_plaintexts"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="  Email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/text_userPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/text_userPhone"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/corner_plaintexts"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="  Phone"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/text_userEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="411dp"
        android:layout_height="109dp"
        android:background="@drawable/corner"
        android:textColorHighlight="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/text_userName"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/corner_plaintexts"
        android:drawableStart="@drawable/baseline_supervised_user_circle_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/text_userPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.486" />

    <Button
        android:id="@+id/btn_signupuser"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:background="@drawable/button_color_change"
        android:text="SIGN UP"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Let's Get Started"
        android:textColor="#EFDFDF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />


</androidx.constraintlayout.widget.ConstraintLayout>